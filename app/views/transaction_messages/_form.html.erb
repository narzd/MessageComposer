<%= form_with(model: transaction_message, local: true) do |form| %>
  <% if transaction_message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction_message.errors.count, "error") %> prohibited this transaction_message from being saved:</h2>

      <ul>
      <% transaction_message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :theme_id %>
    <%= form.number_field :theme_id, id: :transaction_message_theme_id%>
    <% @themes.each do |theme| %>
      <%= image_tag theme.theme_img_url %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :messenger_id %>
    <%= form.number_field :messenger_id, id: :transaction_message_messenger_id %>
    <% @messengers.each do |messenger| %>
      <%= image_tag messenger.messenger_img_url %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message, id: :transaction_message_message %>
  </div>

  <div class="field">
    <%= form.label :recipient %>
    <%= form.text_field :recipient, id: :transaction_message_recipient %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
