<p id="notice"><%= notice %></p>

<h1>Message Composer</h1>

<table>
  <thead>
    <tr>
      <th>Public transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_messages.each do |transaction_message| %>
      <tr>
        <td><%= transaction_message.public_transaction_id %></td>
        <td><%= link_to 'Show', transaction_message %></td>
        <td><%= link_to 'Edit', edit_transaction_message_path(transaction_message) %></td>
        <td><%= link_to 'Destroy', transaction_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

